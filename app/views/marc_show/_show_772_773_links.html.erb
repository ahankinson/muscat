<% children = @item.sources.select { |m| m.record_type != 2} %>
<% if @item.source || children.count > 0 %>
    <div class="panel">
        <h3><%= group[:title] %></h3>
        <div class="panel_contents">
            <div class="attributes_table">
            <% if @item.source %>
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr class="row">
                        <th>
                            <%= @editor_profile.get_sub_label("773", "w") %>
                        </th>
                        <td valign="top">
                            <% if opac %>
                                <%= link_to @item.source.id.to_s, catalog_path(@item.source.id.to_s)%>
                            <% else %>
                                <%= application_helper_link_source_id(@item.source.id, "", opac).html_safe %>
                            <% end %>
                            <%= " #{@item.source.composer}" if @item.source.composer != "" %><%= ": " if (@item.source.composer != "" && @item.source.std_title)%><i><%= "#{@item.source.std_title}" if @item.source.std_title %></i>
                        </td>
                    </tr>
                </table>
            <% end %>
            <% if children.count > 0 %>
                <table border="0" cellpadding="0" cellspacing="0">
                <% count = 0 %>
                <% children.each do |child| %>
                    <tr class="row">
                        <th>
                            <%= count == 0 ? @editor_profile.get_label("772") : "&nbsp;".html_safe %>
                        </th>
                        <td>
                            <% if opac %>
                                <%= link_to child.id.to_s, catalog_path(child.id.to_s)%>
                            <% else %>
                                <%= application_helper_link_source_id(child.id, "", opac).html_safe %>
                            <% end %>
                            <%= " #{child.composer}" if child.composer != "" %><%= ": " if (child.composer != "" && child.std_title != "") %><i><%= "#{child.std_title}" if child.std_title != "" %></i>
                        </td>
                    </tr>
                <% count = count + 1 %>
                <% end %>
                </table>
            <% end %>
            </div>
        </div>
    </div>
<% end %>